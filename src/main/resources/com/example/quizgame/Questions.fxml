<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="500.0" style="-fx-background-color: #A5D6A7;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quizgame.QuestionsController">
    <children>
        <Label fx:id="questionLabel" alignment="CENTER" layoutX="40.0" layoutY="60.0" prefHeight="92.0" prefWidth="418.0" text="Question text will appear here" wrapText="true">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <Button fx:id="answer1" layoutX="46.0" layoutY="200.0" mnemonicParsing="false" onAction="#handleAnswer1" prefHeight="60.0" prefWidth="179.0" style="-fx-font-size: 16px;" text="Answer 1" />
        <Button fx:id="answer2" layoutX="275.0" layoutY="200.0" mnemonicParsing="false" onAction="#handleAnswer2" prefHeight="60.0" prefWidth="179.0" style="-fx-font-size: 16px;" text="Answer 2" />
        <Button fx:id="answer3" layoutX="46.0" layoutY="300.0" mnemonicParsing="false" onAction="#handleAnswer3" prefHeight="60.0" prefWidth="179.0" style="-fx-font-size: 16px;" text="Answer 3" />
        <Button fx:id="answer4" layoutX="275.0" layoutY="300.0" mnemonicParsing="false" onAction="#handleAnswer4" prefHeight="60.0" prefWidth="179.0" style="-fx-font-size: 16px;" text="Answer 4" />

        <Label fx:id="progressLabel" alignment="CENTER" layoutX="180.0" layoutY="500.0" prefHeight="30.0" prefWidth="140.0" text="Question 1 of 10">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Button fx:id="backButton" layoutX="200.0" layoutY="550.0" mnemonicParsing="false" onAction="#handleBackButton" prefHeight="60.0" prefWidth="100.0" style="-fx-background-color: #4682B4;" text="Back" visible="false"  />
    </children>
</AnchorPane>
