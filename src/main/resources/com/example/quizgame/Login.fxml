<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="500.0" style="-fx-background-color: #A5D6A7;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quizgame.LoginController">
    <children>
        <Label layoutX="195.0" layoutY="55.0" prefHeight="42.0" prefWidth="102.0" text="Log In" underline="true">
            <font>
                <Font name="Arial Black" size="28.0" />
            </font>
        </Label>

        <Label layoutX="118.0" layoutY="189.0" text="Username:" underline="true">
            <font>
                <Font name="System Bold Italic" size="15.0" />
            </font>
        </Label>
        <TextField fx:id="usernameField" layoutX="195.0" layoutY="187.0" promptText="Username" />

        <Label layoutX="111.0" layoutY="255.0" prefHeight="22.0" prefWidth="75.0" text="Password:" underline="true">
            <font>
                <Font name="System Bold" size="15.0" />
            </font>
        </Label>
        <PasswordField fx:id="passwordField" layoutX="195.0" layoutY="251.0" promptText="Password" />

        <Button fx:id="loginButton" onAction="#goToStartQuizPage" layoutX="203.0" layoutY="371.0" mnemonicParsing="false"  prefHeight="35.0" prefWidth="86.0" style="-fx-background-color: #4682B4;" text="Log In" textFill="WHITE" />

        <Label layoutX="133.0" layoutY="427.0" text="Don't have an account?">
         <font>
            <Font size="14.0" />
         </font></Label>
        <Button fx:id="signUpButton" onAction="#goToSignInPage" layoutX="278.0" layoutY="422.0" mnemonicParsing="false"  style="-fx-background-color: #A5D6A7;" text="Sign Up" textFill="#0003a6" underline="true">
         <font>
            <Font size="14.0" />
         </font></Button>
      <Button fx:id="backButton" onAction="#goToHomePage" layoutX="33.0" layoutY="530.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="57.0" style="-fx-background-color: #4682B4;" text="Back" textFill="WHITE" >
         <font>
            <Font size="14.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
