<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="500.0" style="-fx-background-color: #A5D6A7;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quizgame.StartQuizController">
    <children>
        <Button fx:id="SignningOut_" layoutX="38.0" layoutY="518.0" mnemonicParsing="false" onAction="#UserLogOut" prefHeight="31.0" prefWidth="66.0" style="-fx-background-color: #4682B4;" text="Back" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font size="15.0" />
            </font>
         <effect>
            <DisplacementMap>
               <mapData>
                  <FloatMap />
               </mapData>
            </DisplacementMap>
         </effect>
        </Button>
        <Button fx:id="QuizStart" onAction="#StartsTheQuiz" layoutX="186.0" layoutY="300.0" mnemonicParsing="false"  prefHeight="46.0" prefWidth="120.0" style="-fx-background-color: #4682B4;" text="Start Quiz" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
         <effect>
            <DropShadow />
         </effect>
        </Button>
        <Text fontSmoothingType="LCD" layoutX="172.0" layoutY="87.0" strokeType="OUTSIDE" strokeWidth="0.0" text=" Welcome !" textAlignment="CENTER">
            <font>
                <Font name="Arial Bold" size="30.0" />
            </font>
        </Text>
        <Label layoutX="81.0" layoutY="159.0" text="Check Your Progress!">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Button fx:id="QuizProgress_" onAction="#UserQuizProgress" layoutX="81.0" layoutY="188.0" mnemonicParsing="false"  prefHeight="43.0" prefWidth="120.0" style="-fx-background-color: #4682B4;" text="Progress" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
         <effect>
            <DropShadow />
         </effect>
        </Button>
        <Button fx:id="SelectTopic" onAction="#navigateToTopicSelection" layoutX="289.0" layoutY="186.0" mnemonicParsing="false"  prefHeight="46.0" prefWidth="138.0" style="-fx-background-color: #4682B4;" text="Select Topic" textFill="WHITE">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
            <effect>
                <DropShadow />
            </effect>
        </Button>
        <Label layoutX="165.0" layoutY="370.0" text="Selecting a topic is required!">
            <font>
                <Font name="System Bold Italic" size="12.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
