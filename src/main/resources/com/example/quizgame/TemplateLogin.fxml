<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml">
    <VBox layoutX="100" layoutY="100" spacing="20" alignment="CENTER"
          style="-fx-background-color: linear-gradient(to bottom, #f0f4f8, #ffffff); -fx-padding: 30; -fx-border-radius: 15; -fx-background-radius: 15; -fx-border-color: #2a5298; -fx-border-width: 2;">
        <Label text="Welcome to Quiz Game" style="-fx-font-size: 24; -fx-text-fill: #2a5298; -fx-font-weight: bold;" />
        <TextField fx:id="usernameField" promptText="Enter Username"
                   style="-fx-font-size: 14; -fx-padding: 10; -fx-background-color: #ffffff; -fx-border-color: #d3dce3; -fx-border-radius: 5; -fx-pref-width: 250;" />
        <PasswordField fx:id="passwordField" promptText="Enter Password"
                       style="-fx-font-size: 14; -fx-padding: 10; -fx-background-color: #ffffff; -fx-border-color: #d3dce3; -fx-border-radius: 5; -fx-pref-width: 250;" />
        <Button fx:id="loginButton" text="Log In"
                style="-fx-background-color: #2a5298; -fx-text-fill: #ffffff; -fx-font-size: 14; -fx-padding: 10; -fx-border-radius: 5; -fx-pref-width: 200;" />
        <HBox alignment="CENTER" spacing="15">
            <Button fx:id="signUpButton" text="Sign Up"
                    style="-fx-background-color: #ffffff; -fx-text-fill: #2a5298; -fx-font-size: 14; -fx-padding: 10; -fx-border-color: #2a5298; -fx-border-radius: 5;" />
            <Button fx:id="guestButton" text="Guest Login"
                    style="-fx-background-color: #ffffff; -fx-text-fill: #2a5298; -fx-font-size: 14; -fx-padding: 10; -fx-border-color: #2a5298; -fx-border-radius: 5;" />
        </HBox>
    </VBox>
</AnchorPane>
